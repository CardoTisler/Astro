<%- include("../partials/header") %>

<form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
    <div class="form-group row">
        <div class="col-3">
            <input type="text" class="form-control" name="name" placeholder="Recipe name" value="<%=recipe.name%>">
        </div>
        <div class="col-7">
            <input type="text" class="form-control" name="image" placeholder="Image URL" value="<%=recipe.image%>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <input type="text" class="form-control" name="description" placeholder="Description" value="<%=recipe.description%>">
        </div>
        <div class="col-2">
            <input type="number" class="form-control" name="cookingTime" placeholder="Cooking time" value="<%=recipe.cookingTime%>">
        </div>
        <div class="col-2">
            <input type="number" class="form-control" name="servings" placeholder="Servings" value="<%=recipe.servings%>">
        </div>   
    </div>

    <div class="form-group">
        <div>
            <label>Directions</label><br>
            <textarea rows="5" cols="50" class="form-control" name="steps"><%=recipe.steps%></textarea>
        </div>

        <div class="col-3" style="margin-top: 1rem; padding: 0;">
            <label>Ingredients</label>
            <% recipe.ingredients.forEach(function(ingredient, index){ %>
                <input type="text" class="form-control" name="ingredients" value="<%=ingredient%>">
            <% }) %>
        </div>

    <button>Edit recipe!</button>
</form>

<%- include("../partials/footer") %>